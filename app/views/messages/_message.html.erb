<div class="cont-<%= message.user.id %>">
  <div class="message-box msg-<%= message.user.id %> " >
    <div class=" d-flex align-items-center">      
      <% unless message.room.is_private %>
        <h6 class="name"> <%= message.user.email %> </h6>
      <% end %>
    </div>
    <%= message.content %>
  </div>

  <div class="edit-form" data-message-edit-target="editForm">
    <%= form_with(model: message, method: :put, url: room_message_path(message.room, message), remote: true, id: "edit-message-form-#{message.id}") do |form| %>
      <%= form.text_field :content %>
      <%= form.submit 'Save' %>
    <% end %>
  </div>
</div>
